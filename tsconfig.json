{
  "compilerOptions": {
    /* General */
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Don't emit JS from this config */
    "noEmit": true,

    /* Types */
    "types": ["node"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
